<project name="FilesWatcher" default="compile">

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac includeantruntime="true" srcdir="src" destdir="build/classes"/>
    </target>

    <target name="jar">
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/FilesWatcher.jar" basedir="build/classes">
            <manifest>
                <attribute name="Main-Class" value="FilesWatcher"/>
            </manifest>
        </jar>
    </target>

    <target name="run">
        <java classname="FilesWatcher">
            <classpath>
                <path location="build/jar/FilesWatcher.jar"/>
            </classpath>
        </java>
    </target>

</project>
